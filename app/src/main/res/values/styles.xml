<resources>

    <style name="MaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="CameraActionButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CameraActionButton.Portrait">
        <item name="android:layout_width">@dimen/action_button_width</item>
        <item name="android:lines">1</item>
    </style>

    <style name="CameraActionButton.Landscape">
        <item name="android:layout_width">@dimen/action_button_width_land</item>
        <item name="android:lines">2</item>
    </style>

    <style name="CameraSettingLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="CameraChronometer">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CameraChronometer.Timer">
        <item name="android:textColor">@color/common_amberA700</item>
    </style>

    <style name="KatsunaToggle">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textOn">@string/common_on</item>
        <item name="android:textOff">@string/common_off</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_width">@dimen/common_toggle_width_v3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

</resources>
