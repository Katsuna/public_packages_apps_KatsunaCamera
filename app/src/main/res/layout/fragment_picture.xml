<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/top_actions_picture" />

    <include
        layout="@layout/bottom_actions_picture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttons_container_height"
        android:layout_alignParentBottom="true" />

    <com.katsuna.camera.ui.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/buttons_container_height"
        android:layout_marginBottom="@dimen/buttons_container_height" />

</RelativeLayout>
